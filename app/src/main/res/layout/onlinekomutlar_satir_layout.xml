<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/onlinekomut_satir_layout_cardview"
        app:cardCornerRadius="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        app:cardElevation="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="19sp"
                android:textStyle="bold"
                android:paddingLeft="5dp"
                android:paddingTop="2dp"
                android:textColor="@color/KomutBasliklari"
                android:id="@+id/onlinekomut_satir_layout_komut_basligi"
                />



                <TextView
                    android:layout_marginLeft="5dp"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:id="@+id/onlinekomut_satir_layout_komut_tarih"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true" />


            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="6dp"
                android:textSize="15sp"
                android:paddingTop="1dp"
                android:textStyle="bold"
                android:id="@+id/onlinekomut_satir_layout_kategori"

                android:textColor="@color/colorAccent"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="6dp"
                android:paddingTop="1dp"
                android:textStyle="bold"
                android:id="@+id/onlinekomut_satir_layout_komut_islevi"
                />


        </LinearLayout>



        </android.support.v7.widget.CardView>

</LinearLayout>